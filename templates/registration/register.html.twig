{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="min-h-screen bg-gradient-to-br from-primary-500 to-purple-600 flex items-center justify-center p-4">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
                <!-- Header -->
                <div class="bg-gradient-to-r from-primary-500 to-purple-600 p-8 text-center">
                    <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-wallet text-primary-500 text-3xl"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-white">ExpenseTracker Pro</h1>
                    <p class="text-white/80 text-sm mt-2">Register to manage your finances</p>
                </div>

                <div class="p-8">
                    <form method="post" class="space-y-6">
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn btn btn-lg btn-primary w-full bg-primary-500 text-white py-3 rounded-lg font-medium hover:bg-primary-600 transform hover:scale-105 transition-all duration-300 shadow-lg">Register</button>
                        {{ form_end(registrationForm) }}

                    </form>
                    <!-- Sign Up Link -->
                    <div>
                        <p class="text-center text-sm text-gray-600 mt-8">
                            Already have an account?
                            <a href="{{ path('app_login') }}" class="text-primary-500 hover:text-primary-600 font-medium">Sign in</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
