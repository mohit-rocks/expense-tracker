{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-primary-500 to-purple-600 flex items-center justify-center p-4">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
                <!-- Header -->
                <div class="bg-gradient-to-r from-primary-500 to-purple-600 p-8 text-center">
                    <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-wallet text-primary-500 text-3xl"></i>
                    </div>
                    <h1 class="text-2xl font-bold text-white">ExpenseTracker Pro</h1>
                    <p class="text-white/80 text-sm mt-2">Sign in to manage your finances</p>
                </div>

                <div class="p-8">
                    <form method="post" class="space-y-6">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ logout_path() }}">Logout</a>
                            </div>
                        {% endif %}

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2" for="username">
                                <i class="fas fa-envelope mr-2 text-gray-400"></i>Email Address
                            </label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all form-control" autocomplete="email" required autofocus>

                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                <i class="fas fa-lock mr-2 text-gray-400"></i>Password
                            </label>
                            <input type="password" name="_password" id="password" class="form-control w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-all" autocomplete="current-password" placeholder="••••••••" required >
                        </div>
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                        <div>
                            <button class="btn btn-lg btn-primary w-full bg-primary-500 text-white py-3 rounded-lg font-medium hover:bg-primary-600 transform hover:scale-105 transition-all duration-300 shadow-lg" type="submit">
                                Sign in
                            </button>
                        </div>

                        <!-- Divider -->
                        <div class="relative my-6">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                        </div>
                    </form>
                    <!-- Sign Up Link -->
                    <div>
                        <p class="text-center text-sm text-gray-600 mt-8">
                            Don't have an account?
                            <a href="{{ path('app_register') }}" class="text-primary-500 hover:text-primary-600 font-medium">Sign up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
