{% extends 'base.html.twig' %}

{% block title %}Dashboard | ExpenseTracker{% endblock %}

{% block body %}
    <div>
        <div class="flex min-h-screen page-gradient">
            <!-- Sidebar -->
            {{ include('menu/_sidebar.html.twig', {
                'email': email,
                'first_name': first_name,
                'last_name': last_name,
            }) }}

            <button @click="sidebarOpen = !sidebarOpen"
                    class="fixed top-4 left-4 z-50 lg:hidden bg-primary-500 text-white p-3 rounded-lg shadow-lg hover:bg-primary-600 transition-colors">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Main Content -->
            <main class="flex-1 lg:ml-72">
                <!-- Top Navigation Bar -->
                {{ include('menu/_main.html.twig', {
                    'email': email,
                    'first_name': first_name,
                    'last_name': last_name,
                }) }}

                <!-- Page Content -->
                <div class="p-4 lg:p-8">
                    <!-- Action Buttons -->
                    <div class="flex flex-wrap gap-3 mb-8">
                        <button class="flex items-center px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all">
                            <i class="fas fa-plus mr-2"></i>Add Expense
                        </button>
                        <button class="flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all">
                            <i class="fas fa-arrow-down mr-2"></i>Add Income
                        </button>
                        <button class="flex items-center px-4 py-2 border-2 border-primary-500 text-primary-500 rounded-lg hover:bg-primary-50 transition-colors">
                            <i class="fas fa-download mr-2"></i>Export
                        </button>
                    </div>

                    <!-- Summary Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                        <div class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all relative overflow-hidden">
                            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-green-400 to-green-600 rounded-t-xl"></div>
                            <div class="flex justify-between items-start">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Total Income</p>
                                    <p class="text-2xl font-bold text-gray-800 mt-1">₹45,000</p>
                                    <p class="text-green-600 text-xs mt-2">
                                        <i class="fas fa-arrow-up mr-1"></i>+12% from last month
                                    </p>
                                </div>
                                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-arrow-up text-green-600 text-lg"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all relative overflow-hidden">
                            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-red-400 to-red-600 rounded-t-xl"></div>
                            <div class="flex justify-between items-start">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Total Expenses</p>
                                    <p class="text-2xl font-bold text-gray-800 mt-1">₹32,400</p>
                                    <p class="text-red-600 text-xs mt-2">
                                        <i class="fas fa-arrow-down mr-1"></i>-5% from last month
                                    </p>
                                </div>
                                <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-arrow-down text-red-600 text-lg"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all relative overflow-hidden">
                            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-400 to-blue-600 rounded-t-xl"></div>
                            <div class="flex justify-between items-start">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Net Balance</p>
                                    <p class="text-2xl font-bold text-gray-800 mt-1">₹12,600</p>
                                    <p class="text-blue-600 text-xs mt-2">
                                        <i class="fas fa-wallet mr-1"></i>Available to spend
                                    </p>
                                </div>
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-wallet text-blue-600 text-lg"></i>
                                </div>
                            </div>
                        </div>

                        <div class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all relative overflow-hidden">
                            <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-yellow-400 to-orange-600 rounded-t-xl"></div>
                            <div class="flex justify-between items-start">
                                <div>
                                    <p class="text-gray-600 text-sm font-medium">Transactions</p>
                                    <p class="text-2xl font-bold text-gray-800 mt-1">156</p>
                                    <p class="text-orange-600 text-xs mt-2">
                                        <i class="fas fa-exchange-alt mr-1"></i>This month
                                    </p>
                                </div>
                                <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-exchange-alt text-orange-600 text-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Chart -->
                    <div class="bg-white rounded-xl shadow-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-800 mb-4">Monthly Overview</h3>
                        <div class="chart-container">
                            <canvas id="dashboardChart"></canvas>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
